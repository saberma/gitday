#main {
  margin-bottom: 40px;
  background: #fff;
  padding: 15px; }

.page-header {
  border-bottom: 1px solid #EEE; }

.day {
  .page-header {
    padding-bottom: 5px;
    margin: 25px 10px 0 0; }
  .content {
    padding: 10px 0;
    border-bottom: #E2E2E2 dashed 1px;
    overflow: auto;
    .well {
      margin-bottom: 0; }
    .authors {
      margin-top: 10px; } } }

body {
  width: 600px;
  padding: 10px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 13px;
  line-height: 18px;
  color: #333; }

h1, h2, h3, h4, h5, h6 {
  font-family: inherit;
  font-weight: bold;
  color: inherit; }
h4, h5, h6 {
  line-height: 18px; }
h5 {
  font-size: 12px;}
h6 {
  font-size: 11px;
  color: #999;
  text-transform: uppercase;
  small {
    font-size: 11px;
    color: #666 } }

.label, .divider, small {
  color: #999 }

p {
  margin: 0 0 9px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 13px;
  line-height: 18px; }

a {
  color: #08C;
  text-decoration: none; }

.tip {
  text-align: center; }

.pull-right {
  float: right; }

table {
  width: 100%;
  tr.item {
    border-bottom: #E2E2E2 dashed 1px;
    .avatar {
      width: 90px;
      height: 90px; } } }
